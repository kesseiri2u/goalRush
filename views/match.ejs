<!DOCTYPE html>
<html>
    <head>
        <title>match</title>
    </head>
    <body>
        <h1>Liste des match</h1>
        <form action="http://localhost:3000/bet/parier" method="post">
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Equipe domicile</th>
                        <th>Match Null</th>
                        <th>Equipe exterieur</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i < match.length; i++) { %>
                        <tr id="<%=match[i].id%>">
                            <td><%= match[i].date%></td>

                            <td>
                                <input type="radio" id="dom<%=i%>" name="match<%=i%>" value="1">
                                <label for="dom"><%= match[i].team_home%> - <%= match[i].home_team_rating%></label>
                            </td>
                            <td>
                                <input type="radio" id="null<%=i%>" name="match<%=i%>" value="2">
                                <label for="null"><%= match[i].draft_rating%></label>
                            </td>
                            <td>
                                <input type="radio" id="ext<%=i%>" name="match<%=i%>" value="3">
                                <label for="ext"><%= match[i].team_away%> - <%= match[i].away_team_rating%></label>
                            </td>
                        </tr>
                    <%}%>
                </tbody>
            </table>
            <div id="cote">

            </div>

            <div id="mise">

            </div>

            <div id="gain">

            </div>
            <p>Cote totale : </p>
            <button>Parier</button>
        </form>
    </body>
</html>